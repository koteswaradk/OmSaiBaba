<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_below="@+id/image_main"
        android:layout_centerInParent="true"
        ads:adUnitId="@string/admobi_adUid_banner_add" />
    <ImageView android:id="@+id/image_main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/txtLabel"
        android:src="@drawable/saibaba"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
<ImageButton
         android:id="@+id/miracle_back_Button"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/txtLabel"
         android:layout_alignParentTop="true"
         android:background="@drawable/back_button"
          />
    <TextView
        android:id="@+id/txtLabel"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sachitanada Sadguru Sainath Maharaj Ki Jai"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ff0000" />
     <TextView
        android:id="@+id/txtLabel2"
        android:layout_below="@id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text=""
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ff0000" />
     <ScrollView  android:layout_below="@id/txtLabel2"
         android:layout_width="wrap_content"
         android:layout_centerHorizontal="true"
        		  android:layout_height="wrap_content">
     <TextView
        
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
      
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000" />
     </ScrollView>

</RelativeLayout>